@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName") ?? "Guest";
    var surname = HttpContextAccessor.HttpContext.Session.GetString("Surname");
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username") ?? "guest";
    var logoPath = HttpContextAccessor.HttpContext.Session.GetString("ProfilePhoto") ?? "~/images/Logo.jpg";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hotel Booking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
    <style>
        nav.navbar {
            position: relative !important;
            z-index: 1030;
            background-color: #fff;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="@Url.Content(logoPath)" alt="Logo" style="height: 50px; width: 50px; border-radius: 50%; object-fit: cover;" />
                <span class="system-name ms-2">Hotel Booking System</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="History">History</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="ManageRoom">Manage Room</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="CustomerRegistration">Customer Booking</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Checkout", "Customer")">Checkout</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
                            Profile
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li class="dropdown-item text-muted">
                                <strong>@Context.Session.GetString("FullName")</strong><br />
                                <small>@Context.Session.GetString("Username")</small>
                            </li>
                            <li><hr class="dropdown-divider" /></li>

                            <!--<li><a class="dropdown-item" asp-controller="Profile" asp-action="Profile">View Profile</a></li>-->
                            <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#changeNameModal">Change Name</a></li>
                            <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#changeUsernameModal">Change Username</a></li>
                            <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#changePasswordModal">Change Password</a></li>

                            <li class="px-3 py-1">
                                <form asp-controller="Profile" asp-action="ChangePhoto" method="post" enctype="multipart/form-data" id="uploadForm">
                                    <label for="profileUpload" class="dropdown-item btn btn-outline-secondary btn-sm w-100 text-start" style="cursor:pointer;">
                                        Change Logo
                                    </label>
                                    <input type="file" id="profileUpload" name="ProfilePhoto" class="d-none" onchange="document.getElementById('uploadForm').submit();" accept="image/*" />
                                </form>
                            </li>

                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container py-4">
        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="custom-footer">
        <div class="footer-content">
            <div class="footer-left">
                <h2>Lorem Ipsum</h2>
                <p>
                    Lorem Ipsum is simply dummy text of the printing and typesetting industry.<br>
                    Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                </p>
                <p>Phone: (123) 456-7890<br>Email: group1@havenhotel.com</p>
            </div>
            <div class="footer-right">
                <div class="hover-card">
                    <img src="/images/suite.jpg" alt="Hotel Lobby" />
                    <div class="hover-info">
                        <h3>About Us</h3>
                        <p>Luxury redefined — spacious rooms, gourmet dining, and exceptional hospitality.</p>
                    </div>
                </div>
                <div class="hover-card">
                    <img src="/images/deluxe.jpg" alt="Hotel Lobby" />
                    <div class="hover-info">
                        <h3>Our Services</h3>
                        <p>24/7 Concierge · Spa & Wellness · Airport Shuttle · Rooftop Lounge</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Change Name Modal -->
    <div class="modal fade" id="changeNameModal" tabindex="-1" aria-labelledby="changeNameLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-controller="Profile" asp-action="ChangeName" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Change Name</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group mb-3">
                            <label for="FullName">New Full Name</label>
                            <input name="FullName" class="form-control" value="@Context.Session.GetString("FullName")" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Name</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Change Username Modal -->
    <div class="modal fade" id="changeUsernameModal" tabindex="-1" aria-labelledby="changeUsernameLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-controller="Profile" asp-action="ChangeUsername" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Change Username</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group mb-3">
                            <label for="Username">New Username</label>
                            <input name="Username" class="form-control" value="@Context.Session.GetString("Username")" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Username</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-controller="Profile" asp-action="ChangePassword" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Change Password</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group mb-3">
                            <label for="currentPassword">Current Password</label>
                            <input type="password" name="currentPassword" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="newPassword">New Password</label>
                            <input type="password" name="newPassword" class="form-control" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- JS Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Auto-hide alerts after 5 seconds -->
    <script>
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Close modals after successful form submission
            $('form').on('submit', function() {
                var modal = $(this).closest('.modal');
                setTimeout(function() {
                    modal.modal('hide');
                }, 1000);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>